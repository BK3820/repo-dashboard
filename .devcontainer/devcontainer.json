{
  "name": "Backstage Dev Container",
  "build": {
    "context": "..",
    "dockerfile": "Dockerfile"
  },
  "forwardPorts": [3000, 7007],
  "remoteUser": "node",
  "workspaceFolder": "/workspace",
  "features": {
    "ghcr.io/devcontainers/features/docker-from-docker:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "eamodio.gitlens"
      ]
    }
  }
}
